<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@drawable/background1">

    <Button
        android:text="Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button4"
        android:layout_alignBaseline="@+id/about_button"
        android:layout_alignBottom="@+id/about_button"
        android:layout_toEndOf="@+id/play_button"
        android:background="#0C26C3"
        android:textSize="30sp"
        android:textColor="#ffffff"
        android:textStyle="normal|bold"
        android:paddingLeft="5dp"
        android:paddingRight="5dp" />

    <Button
        android:text="@string/about"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/about_button"
        android:textSize="30sp"
        android:background="#FFF800"
        android:textColor="#000000"
        android:textStyle="normal|bold"
        android:layout_below="@+id/play_button"
        android:layout_toStartOf="@+id/button4"
        android:paddingLeft="5dp"
        android:paddingRight="5dp" />

    <Button
        android:text="@string/score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/score_button"
        android:textSize="30sp"
        android:background="#E40000"
        android:textColor="#ffffff"
        android:textStyle="normal|bold"
        android:paddingStart="18dp"
        android:paddingEnd="16dp"
        android:layout_alignBaseline="@+id/play_button"
        android:layout_alignBottom="@+id/play_button"
        android:layout_toEndOf="@+id/about_button" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/title2"
        android:id="@+id/imageView"
        android:adjustViewBounds="true"
        android:layout_marginTop="52dp"
        android:contentDescription="@string/game_title"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="@string/play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/play_button"
        android:textSize="30sp"
        android:background="#00B600"
        android:textColor="#ffffff"
        android:textStyle="normal|bold"
        android:layout_marginStart="84dp"
        android:paddingLeft="18dp"
        android:paddingRight="18dp"
        android:layout_below="@+id/imageView"
        android:layout_alignParentStart="true"
        android:layout_marginTop="120dp" />
</RelativeLayout>